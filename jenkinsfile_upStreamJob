pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        echo "Checking out the file from Master..."
		sh 'git checkout master'
		sh 'git pull'
		
      }
    }
    stage('Build') {
      steps {
        echo "Compiling upStream Job...."
        sh 'echo "upStreamJob" ${BUILD_NUMBER}> upStreamJobOutput.txt'
      }
    }
     stage('Commit') {

      steps {
        sh 'cat upStreamJobOutput.txt'
        sh 'ls -lh'
        sh 'git commit -m "Jenkins commit after build" upStreamJobOutput.txt'\
		sh './git-tag.sh'
        sh 'git push --all --verbose'
		sh 'git push origin --tags'
      }
    }
	stage ('DownStreamJob1') {
      steps {
        build job: 'DownStreamJob1'
      }
    }
	stage ('DownStreamJob2') {
      steps {
        build job: 'DownStreamJob2'
      }
    }
    
  }
}