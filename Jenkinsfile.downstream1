pipeline {
  agent any

  stage('Count') {
    steps {
      sh 'echo Downstream -1'
      sh 'echo ${BUILD_NUMBER} > Downstream_1_mytext.txt'
    }
  }
  stage('Commit') {
    steps {
      sh 'cat Downstream_1_mytext.txt'
      sh 'ls -lh'
      sh 'git commit -m "Jenkins commit after build" mytext.txt'
      sh 'git push --all --verbose'
    }
  }
}
