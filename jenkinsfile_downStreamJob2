pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps {
        echo "Checking out the file from Master..."
        sh 'git checkout master'
		
      }
    }
    stage('Build') {
      steps {
        echo "Compiling DownStream2 System...."
        sh 'echo "DownStream2" ${BUILD_NUMBER}> mytext1.txt'
      }
    }
     stage('Commit') {
      steps {
        sh 'cat mytext1.txt'
        sh 'ls -lh'
        sh 'git commit -m "Jenkins commit after build" mytext1.txt'
        sh 'git push --all --verbose'
      }
    }
    
  }
}